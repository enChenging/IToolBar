<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolBar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/default_toolbar_height">

    <ImageView
        android:id="@+id/iv_back_icon"
        android:layout_width="@dimen/default_toolbar_height"
        android:layout_height="@dimen/default_toolbar_height"
        android:layout_centerVertical="true"
        android:src="@mipmap/toolbar_back" />

    <TextView
        android:id="@+id/tv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:text="更多"
        android:textColor="@color/Blue"
        android:textSize="@dimen/default_toolbar_title_right_size"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/default_toolbar_height"
        android:layout_marginRight="@dimen/default_toolbar_height"
        android:ellipsize="marquee"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/Black"
        android:textSize="@dimen/default_toolbar_title_size"
        tools:text="标题" />

    <View
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_toolbar_bottom_line"
        android:background="@color/Black"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        />
</RelativeLayout>